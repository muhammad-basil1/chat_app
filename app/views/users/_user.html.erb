<%= form_for ChatRoom.new, html: { class: 'hover:bg-gray-800 p-3 rounded-lg relative' }, remote: true do |f| %>
  <%= f.hidden_field :first_participent_id, value: User.current_user.id %>
  <%= f.hidden_field :second_participent_id, value: user.id %>
  <%= button_tag type: 'submit' do %>
    <div class="flex justify-between items-center">
      <div class="w-16 h-16 relative flex flex-shrink-0">
        <img class="shadow-md rounded-full w-full h-full object-cover" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt=""/>
      </div>
      <div class="flex-auto min-w-0 ml-4 mr-2 hidden md:block group-hover:block">
        <p><%= user.name %></p>
      </div>
    </div>
  <% end %>
<% end %>